<%- include('../shared/header') %>
<%- include('../shared/sidebar') %>
<!-- #Main ============================ -->
<div class="page home-page">
<%- include('../shared/navbar') %>
<!-- Counts Section -->
<section class="dashboard-counts section-padding">
  <div class="container-fluid">
    <div class="row">

      <div class="col-lg-12">
        <div class="card">
          <div class="card-header d-flex align-items-center">
            <h2 class="h5 display">Résultats de la grille : <%- grille.reference %></h2>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <table class="table table-sm table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Domicile</th>
                      <th class="text-center">Score</th>
                      <th>Extérieur</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% grille.gameTicket.fixtures.forEach(function(fixture){ %>
                      <tr>
                      <td><%- moment(fixture.date).utc().format('DD/MM HH:mm') %></td>
                        <td><%- fixture.homeTeam.name %></td>
                        <td colspan="1" class="text-center"><%- fixture.result.homeScore %> - <%- fixture.result.awayScore %></td>
                        <td><%- fixture.awayTeam.name %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>

              <div class="col-md-6">
                <table class="table table-sm table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Domicile</th>
                      <th class="text-center">1N2</th>
                      <th>Extérieur</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% grille.bets.forEach(function(bet){ %>
                      <tr>
                      <td><%- moment(bet.fixture.date).utc().format('DD/MM HH:mm') %></td>
                        <td><%- bet.fixture.homeTeam.name %></td>
                        <td colspan="1" class="text-center"><%- bet.result %></td>
                        <td><%- bet.fixture.awayTeam.name %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>


    </div>
  </div>
</section>


<%- include('../shared/footer') %>
